# This file located in directory /etc/logrotate.hourly.d
/var/log/postgresql/postgresql.log {
       # rotate on size or time
       # 1024M per day / 8 working hours =~ 150M
       size 150M
       hourly
       # Keep 7 days of logs: 24 x 7 = 168
       rotate 168
       copytruncate
       delaycompress
       compress
       notifempty
       missingok
}
